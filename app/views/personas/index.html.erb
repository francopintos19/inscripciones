<%- model_class = Persona -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:apellido) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:id_tipo_doc) %></th>
      <th><%= model_class.human_attribute_name(:doc) %></th>
      <th><%= model_class.human_attribute_name(:direcc) %></th>
      <th><%= model_class.human_attribute_name(:codido_postal) %></th>
      <th><%= model_class.human_attribute_name(:provincia) %></th>
      <th><%= model_class.human_attribute_name(:ciudad) %></th>
      <th><%= model_class.human_attribute_name(:celular) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:profesional) %></th>
      <th><%= model_class.human_attribute_name(:titulo_universitario) %></th>
      <th><%= model_class.human_attribute_name(:titulo_posgrado) %></th>
      <th><%= model_class.human_attribute_name(:especialidad) %></th>
      <th><%= model_class.human_attribute_name(:ocupacion) %></th>
      <th><%= model_class.human_attribute_name(:institucion) %></th>
      <th><%= model_class.human_attribute_name(:cargo) %></th>
      <th><%= model_class.human_attribute_name(:telefono_prof) %></th>
      <th><%= model_class.human_attribute_name(:email_prof) %></th>
      <th><%= model_class.human_attribute_name(:menu_jueves) %></th>
      <th><%= model_class.human_attribute_name(:menu_viernes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= link_to persona.id, persona_path(persona) %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.id_tipo_doc %></td>
        <td><%= persona.doc %></td>
        <td><%= persona.direcc %></td>
        <td><%= persona.codido_postal %></td>
        <td><%= persona.provincia %></td>
        <td><%= persona.ciudad %></td>
        <td><%= persona.celular %></td>
        <td><%= persona.email %></td>
        <td><%= persona.profesional %></td>
        <td><%= persona.titulo_universitario %></td>
        <td><%= persona.titulo_posgrado %></td>
        <td><%= persona.especialidad %></td>
        <td><%= persona.ocupacion %></td>
        <td><%= persona.institucion %></td>
        <td><%= persona.cargo %></td>
        <td><%= persona.telefono_prof %></td>
        <td><%= persona.email_prof %></td>
        <td><%= persona.menu_jueves %></td>
        <td><%= persona.menu_viernes %></td>
        <td><%=l persona.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_persona_path(persona), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      persona_path(persona),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_persona_path,
            :class => 'btn btn-primary' %>
