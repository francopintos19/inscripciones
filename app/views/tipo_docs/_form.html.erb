<%= form_for @tipo_doc, :html => { :class => "form-horizontal tipo_doc" } do |f| %>

  <% if @tipo_doc.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tipo_doc.errors.count, "error") %> prohibited this tipo_doc from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tipo_doc.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tipo_docs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>